<Window x:Class="LineSimWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Линия — симулятор"
                Height="780"
                Width="1200"
                Background="#F4F6FA">
        <Grid Margin="10">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="380"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая панель -->
                <Border Grid.Column="0"
                                Background="White"
                                Padding="12"
                                CornerRadius="12"
                        BorderBrush="#D9DFEA"
                                BorderThickness="1">
                        <!-- упорядоченная сетка -->
                        <Grid>
                                <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <!-- 0: заголовок -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 1: смена, мин -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 2: смен к моделированию -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 3: режим времени -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 4: скорость -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 5: счетчик этапов -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 6: кнопки -->
                                        <RowDefinition Height="*"/>
                                        <!-- 7: таблица -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 8: сводка (итоги первой смены) -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 9: готово по сменам -->
                                        <RowDefinition Height="Auto"/>
                                        <!-- 10: заголовок лога -->
                                        <RowDefinition Height="180"/>
                                        <!-- 11: лог -->
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <!-- Заголовок -->
                                <TextBlock Grid.Row="0"
                                                Grid.ColumnSpan="3"
                                           Text="Параметры"
                                                FontSize="20"
                                                FontWeight="Bold"
                                           Foreground="#0B1A33"
                                                Margin="0,0,0,8"/>

                                <!-- Смена, мин -->
                                <TextBlock Grid.Row="1"
                                                Grid.Column="0"
                                                Text="Смена, мин"
                                           VerticalAlignment="Center"
                                                Foreground="#334155"/>
                                <TextBox  Grid.Row="1"
                                                Grid.Column="1"
                                                x:Name="ShiftBox"
                                                Text="720"
                                                MinWidth="120"/>

                                <!-- Смен к моделированию -->
                                <TextBlock Grid.Row="2"
                                                Grid.Column="0"
                                                Text="Смен к моделированию"
                                           VerticalAlignment="Center"
                                                Foreground="#334155"/>
                                <TextBox  Grid.Row="2"
                                                Grid.Column="1"
                                                x:Name="HorizonBox"
                                                Text="2"
                                                MinWidth="120"/>

                                <!-- Режим времени -->
                                <TextBlock Grid.Row="3"
                                                Grid.Column="0"
                                                Text="Режим времени"
                                           VerticalAlignment="Center"
                                                Foreground="#334155"/>
                                <ComboBox Grid.Row="3"
                                                Grid.Column="1"
                                                x:Name="ModeBox"
                                                MinWidth="160">
                                        <ComboBoxItem Content="Min"/>
                                        <ComboBoxItem Content="Max"/>
                                        <ComboBoxItem Content="RandomEachJob"
                                                        IsSelected="True"/>
                                </ComboBox>

                                <!-- Скорость -->
                                <TextBlock Grid.Row="4"
                                                Grid.Column="0"
                                                Text="Скорость (x)"
                                           VerticalAlignment="Center"
                                                Foreground="#334155"/>
                                <Slider    Grid.Row="4"
                                                Grid.Column="1"
                                                x:Name="SpeedSlider"
                                           Minimum="0.1"
                                                Maximum="100"
                                                Value="1"
                                                Margin="0,2,6,0"/>
                                <TextBlock Grid.Row="4"
                                                Grid.Column="2"
                                           Text="{Binding ElementName=SpeedSlider, Path=Value, StringFormat=F0×}"
                                           HorizontalAlignment="Right"
                                                VerticalAlignment="Center"
                                           Foreground="#0B1A33"
                                                MinWidth="40"/>

                                <!-- Счётчик этапов -->
                                <TextBlock Grid.Row="5"
                                                Grid.Column="0"
                                                Text="Этапов на схеме:"
                                           Foreground="#334155"
                                                VerticalAlignment="Center"/>
                                <TextBlock Grid.Row="5"
                                                Grid.Column="1"
                                                Text="{Binding Stages.Count}"
                                           Foreground="#0B1A33"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"/>

                                <!-- Кнопки -->
                                <WrapPanel Grid.Row="6"
                                                Grid.ColumnSpan="3"
                                                ItemHeight="32"
                                                ItemWidth="140"
                                                Margin="0,6,0,6">
                                        <Button x:Name="AddStageBtn"
                                                        Content="Добавить этап"
                                                        Click="AddStageBtn_Click"
                                                        Padding="10,6"
                                                        Margin="0,0,8,0"/>
                                        <Button x:Name="RemoveStageBtn"
                                                        Content="Удалить этап"
                                                        Click="RemoveStageBtn_Click"
                                                        Padding="10,6"
                                                        Margin="0,0,8,0"/>
                                        <Button Content="Старт / Пауза"
                                                        Click="StartPause_Click"
                                                        Padding="10,6"
                                                        Margin="0,0,8,0"/>
                                        <Button Content="Сброс"
                                                        Click="Reset_Click"
                                                        Padding="10,6"/>
                                </WrapPanel>

                                <!-- Таблица -->
                                <DataGrid Grid.Row="7"
                                                Grid.ColumnSpan="3"
                                                x:Name="StagesGrid"
                                          ItemsSource="{Binding Stages}"
                                          AutoGenerateColumns="False"
                                                HeadersVisibility="Column"
                                          Background="White"
                                                Foreground="#0B1A33"
                                          BorderBrush="#D9DFEA"
                                                BorderThickness="1"
                                          GridLinesVisibility="Horizontal"
                                                MinHeight="280"
                                          IsReadOnly="False"
                                                CanUserAddRows="True"
                                                CanUserDeleteRows="True">
                                        <DataGrid.Columns>
                                                <DataGridTextColumn Header="Название"
                                                                    Binding="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Width="*"
                                                                MinWidth="140"/>
                                                <DataGridTextColumn Header="Мин"
                                                                    Binding="{Binding MinMinutes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Width="70"/>
                                                <DataGridTextColumn Header="Макс"
                                                                    Binding="{Binding MaxMinutes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Width="70"/>
                                                <DataGridTextColumn Header="Постов"
                                                                    Binding="{Binding Centers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Width="70"/>
                                        </DataGrid.Columns>
                                </DataGrid>

                                <!-- Сводка по первой смене -->
                                <StackPanel Grid.Row="8"
                                                Grid.ColumnSpan="3"
                                                Orientation="Horizontal"
                                                Margin="0,6,0,0">
                                        <TextBlock Foreground="#334155"
                                                        Text="Готово за 1-ю смену:"
                                                        VerticalAlignment="Center"/>
                                        <TextBlock x:Name="OutputBlock"
                                                        Foreground="#0B1A33"
                                                        FontSize="20"
                                                        FontWeight="Bold"
                                                   Margin="8,0,0,0"
                                                        VerticalAlignment="Center"/>
                                        <TextBlock x:Name="TimeBlock"
                                                        Foreground="#475569"
                                                        FontSize="14"
                                                        Margin="16,0,0,0"
                                                   VerticalAlignment="Center"/>
                                </StackPanel>

                                <!-- Готово по сменам -->
                                <StackPanel Grid.Row="9"
                                                Grid.ColumnSpan="3"
                                                Orientation="Vertical"
                                                Margin="0,6,0,0">
                                        <TextBlock Foreground="#334155"
                                                        Text="Готово по сменам:"/>
                                        <ListBox x:Name="PerShiftList"
                                                 Background="White"
                                                        Foreground="#0B1A33"
                                                 BorderBrush="#D9DFEA"
                                                        BorderThickness="1"
                                                 MaxHeight="120"/>
                                </StackPanel>

                                <!-- Лог -->
                                <TextBlock Grid.Row="10"
                                                Grid.ColumnSpan="3"
                                                Margin="0,6,0,4"
                                           Foreground="#334155"
                                                Text="События:"/>
                                <ListBox  Grid.Row="11"
                                                Grid.ColumnSpan="3"
                                          x:Name="LogList"
                                                Background="White"
                                                Foreground="#0B1A33"
                                          BorderBrush="#D9DFEA"
                                                BorderThickness="1"/>
                        </Grid>
                </Border>

                <!-- Разделитель -->
                <Rectangle Grid.Column="1"
                                Width="12"
                                Fill="#E6EAF3"
                                RadiusX="6"
                                RadiusY="6"/>

                <!-- Правая часть: масштабируемая схема -->
                <Grid Grid.Column="2">
                        <Viewbox x:Name="SchemeViewbox"
                                        Stretch="Uniform"
                                        StretchDirection="DownOnly">
                                <Canvas x:Name="StageCanvas"
                                                Background="White"/>
                        </Viewbox>
                </Grid>
        </Grid>
</Window>